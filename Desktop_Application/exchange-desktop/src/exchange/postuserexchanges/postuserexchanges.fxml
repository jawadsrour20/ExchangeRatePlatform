        </toggleGroup>
    </RadioButton>
    <RadioButton  fx:id="sellUSDButton" text="Sell USD" toggleGroup="$transactionType" GridPane.RowIndex="8" GridPane.columnIndex="0" />
    <Button onAction="#addUserExchange" prefHeight="25.0" prefWidth="180.0" styleClass="btn" text="Add Transaction" GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.rowSpan="2" />
