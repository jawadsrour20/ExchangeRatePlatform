    <Label styleClass="header" text="User Exchange" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" />

    <Label styleClass="value-label" text="Receiver Name" GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <TextField fx:id="receiverName" GridPane.RowIndex="4" GridPane.columnIndex="1" />



    <Label styleClass="value-label" text="usd Input" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="usdTextField" GridPane.RowIndex="5" GridPane.columnIndex="1" />

